.open-modal
	overflow hidden
/*	padding-right 17px*/

.add-popup__overlay
	position fixed
	z-index 999
	top 0
	left 0
	display none
	width 100%
	height 100%
	background rgba(0, 0, 0, .7);


.add-popup
	position fixed
	z-index 1000
	top 50%
	left 50%
	margin-top -150px
	margin-left -200px
	padding 20px
	display none
	width 400px
	height 300px
	background #fff

	&__content
		position relative
		height 100%

	&__header
		margin-bottom 15px
		font-weight bold
		text-align center

.button-block
	position absolute
	width 100%
	bottom 0
	text-align center